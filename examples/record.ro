record Color = struct { red : int; green : int; blue : int }

# These all use explicit field-naming.
var RED   = new Color { red = 255; green = 0;   blue = 0   }
var GREEN = new Color { red = 0;   green = 255; blue = 0   }
var BLUE  = new Color { red = 0;   green = 0;   blue = 255 }

# These both use implicit field-naming via order.
var WHITE = new Color { 255; 255; 255 }
var BLACK = new Color { 0; 0; 0 }
